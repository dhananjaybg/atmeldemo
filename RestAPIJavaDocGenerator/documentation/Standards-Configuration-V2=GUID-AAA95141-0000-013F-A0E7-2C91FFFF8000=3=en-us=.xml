   <title>Standards Configuration V2</title>
   <shortdesc>Create, Fetch or Delete Standards supported by SDL LiveContent Reach</shortdesc>
   <refbody>
      <section>
         <p>
            <table>
               <tgroup cols="6">
                  <colspec colnum="1" colname="col1" colwidth="*"/>
                  <colspec colnum="2" colname="col2" colwidth="*"/>
                  <colspec colnum="3" colname="col3" colwidth="*"/>
                  <colspec colnum="4" colname="col4" colwidth="*"/>
                  <colspec colnum="5" colname="col5" colwidth="*"/>
                  <colspec colnum="6" colname="col6" colwidth="*"/>
                  <thead>
                     <row>
                        <entry colname="col1"> API Call </entry>
                        <entry colname="col2"> HTTP Method </entry>
                        <entry colname="col3"> URL </entry>
                        <entry colname="col4"> Format </entry>
                        <entry colname="col5"> Form Data </entry>
                        <entry colname="col6"> Permissions </entry>
                     </row>
                  </thead>
                  <tbody>
                     <row>
                        <entry colname="col1">
                           <xref format="dita" scope="local" type="reference"
                                 href="GUID-AAA95141-0000-013F-A0E7-2C91FFFF8002#GUID-AAA95141-0000-013F-A0E7-2C91FFFF8002">Create a Standard</xref>
                        </entry>
                        <entry colname="col2">
                           <codeph>POST</codeph>
                        </entry>
                        <entry colname="col3">
                           <filepath>/v2/standards/{name}</filepath>
                        </entry>
                        <entry colname="col4">
                           <codeblock>[application/json] OR [application/xml]</codeblock>
                        </entry>
                        <entry colname="col5">
                           <codeblock/>
                        </entry>
                        <entry colname="col6">
                           <uicontrol>"Manage application"</uicontrol>
                        </entry>
                     </row>
                     <row>
                        <entry colname="col1">
                           <xref format="dita" scope="local" type="reference"
                                 href="GUID-AAA95141-0000-013F-A0E7-2C91FFFF8003#GUID-AAA95141-0000-013F-A0E7-2C91FFFF8003">Delete a Standard</xref>
                        </entry>
                        <entry colname="col2">
                           <codeph>DELETE</codeph>
                        </entry>
                        <entry colname="col3">
                           <filepath>/v2/standards/{name}</filepath>
                        </entry>
                        <entry colname="col4">
                           <codeblock>[application/json] OR [application/xml]</codeblock>
                        </entry>
                        <entry colname="col5">
                           <codeblock/>
                        </entry>
                        <entry colname="col6">
                           <uicontrol>"Manage application"</uicontrol>
                        </entry>
                     </row>
                     <row>
                        <entry colname="col1">
                           <xref format="dita" scope="local" type="reference"
                                 href="GUID-AAA95141-0000-013F-A0E7-2C91FFFF8001#GUID-AAA95141-0000-013F-A0E7-2C91FFFF8001">Fetch Standards</xref>
                        </entry>
                        <entry colname="col2">
                           <codeph>GET</codeph>
                        </entry>
                        <entry colname="col3">
                           <filepath>v2/standards</filepath>
                        </entry>
                        <entry colname="col4">
                           <codeblock/>
                        </entry>
                        <entry colname="col5">
                           <codeblock/>
                        </entry>
                        <entry colname="col6">
                           <uicontrol>"Develop application"</uicontrol>
                        </entry>
                     </row>
