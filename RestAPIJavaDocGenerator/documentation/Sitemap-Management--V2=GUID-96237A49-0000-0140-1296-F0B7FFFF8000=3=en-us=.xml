                        </entry>
                        <entry colname="col2">
                           <codeph>PUT</codeph>
                        </entry>
                        <entry colname="col3">
                           <filepath>/v2/sitemap/{pub}/{lang}</filepath>
                        </entry>
                        <entry colname="col4">
                           <codeblock>[application/json] OR [application/xml]</codeblock>
                        </entry>
                        <entry colname="col5">
                           <codeblock/>
                        </entry>
                        <entry colname="col6">
