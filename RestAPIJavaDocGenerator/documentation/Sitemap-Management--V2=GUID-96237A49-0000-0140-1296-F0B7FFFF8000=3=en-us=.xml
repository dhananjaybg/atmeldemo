                           <codeph>GET</codeph>
                        </entry>
                        <entry colname="col3">
                           <filepath>/v2/sitemap</filepath>
                        </entry>
                        <entry colname="col4">
                           <codeblock/>
                        </entry>
                        <entry colname="col5">
                           <codeblock/>
                        </entry>
                        <entry colname="col6">
                           <uicontrol>"Use application"</uicontrol>
                        </entry>
